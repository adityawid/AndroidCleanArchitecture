<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adityawidayanto.moviesshow">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidCleanArchitecture">
        <activity
            android:name="com.adityawidayanto.moviesshow.view.ui.SplashActivity"
            android:theme="@style/NoActionBar.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.adityawidayanto.moviesshow.view.ui.MainActivity"/>
        <activity
            android:name="com.adityawidayanto.core.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="APP_VERSION_CODE"
            android:value="${APP_VERSION_CODE}" />
        <meta-data
            android:name="APP_VERSION_NAME"
            android:value="${APP_VERSION_NAME}" />
    </application>

</manifest>